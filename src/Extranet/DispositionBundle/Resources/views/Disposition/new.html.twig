{% extends 'ExtranetAppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Création d'une mise à disposition</h1>
    {{ form_start(form) }}
    {{ form_row(form.personnel) }}
    {{ form_row(form.qualification) }}
    {{ form_row(form.wkdate) }} 
    <a href="#" class="add_date clear" style="padding:5px;line-height:28px;">Ajouter une date de mission</a>
    <div class="clear"></div>
    {{ form_row(form.utilisateur) }}

    {{ form(form) }}
    

	<div class="section_retour">
		<a href="{{ path('disposition') }}" title="Retour à la gestion des mises a disposition">Retour &agrave; la gestion des mises à disposition</a>
		
		<a href="{{ path('extranet_app_homepage') }}" title="Retour au tableau de bord">Retour au tableau de bord</a>
	</div>


	<script>
	    $('a.add_date').live('click', function(event){
	        event.preventDefault();
	        
	        var collectionHolder = $('#extranet_dispositionbundle_disposition_wkdate');
	        var prototype = collectionHolder.attr('data-prototype');
	        form = prototype.replace(/__name__/g, collectionHolder.children().length);
	        collectionHolder.append(form);
	    });
	</script>
{% endblock %}
