{% extends 'ExtranetAppBundle::layout.html.twig' %}

{% block body -%}
    <div class="page_title">Personnel</div>

    <table class="records_list">
        <thead>
            <tr>
                <th class="small">Civilite</th>
                <th class="large">Nom</th>
                <th class="large">Prenom</th>
                <th class="large">Email</th>
                <th class="large">Tel</th>
                <th class="small">Active</th>
                <th class="large">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="small">{% if  entity.civilite != false %}  Mr {% endif %} {% if entity.civilite == false %} Mme {% endif %}</td>
                <td class="large">{{ entity.nom }}</td>
                <td class="large">{{ entity.prenom }}</td>
                <td class="large">{{ entity.email }}</td>
                <td class="large">{{ entity.tel }}</td>
                <td class="small">
                    {% if  entity.active != false %}  Oui {% endif %}
                    {% if entity.active == false %} Non {% endif %}
                </td>
                <td class="large">
                <ul>
                    <li>
                        <a href="{{ path('personnel_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('personnel_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
    

    {% endfor %}
        </tbody>
    </table>


        <ul>
            <li>
                <a href="{{ path('personnel_new') }}">
                    Ajouter une nouvelle personne
                </a>
            </li>
        </ul>
        <div class="section_retour">
            <a href="{{ path('extranet_app_homepage') }}" title="Retour au tableau de bord">Retour au tableau de bord</a>
        </div>
    {% endblock %}
