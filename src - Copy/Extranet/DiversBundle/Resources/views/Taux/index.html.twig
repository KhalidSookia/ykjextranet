{% extends 'ExtranetAppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Taux list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th class="large">Normale</th>
                <th class="large">Repas</th>
                <th class="large">Transport</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="large">{{ entity.normale }}</td>
                <td class="large">{{ entity.repas }}</td>
                <td class="large">{{ entity.transport }}</td>
                <td class="large">
                <ul>
                    <li>
                        <a href="{{ path('taux_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
            <li>
            </li>
        </ul>
        <div class="section_retour">
            <a href="{{ path('divers') }}" title="Retour au tableau de bord">Retour vers la section divers</a>
            
            <a href="{{ path('extranet_app_homepage') }}" title="Retour au tableau de bord">Retour au tableau de bord</a>
        </div>
    {% endblock %}
