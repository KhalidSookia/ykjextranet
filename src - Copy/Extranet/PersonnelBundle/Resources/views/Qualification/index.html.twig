{% extends 'ExtranetAppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Qualification list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th class="large">Qualification</th>
                <th class="small">Active</th>
                <th class="large">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="large">{{ entity.qualification }}</td>
                <td class="small">
                    {% if  entity.active != false %}  Oui {% endif %}
                    {% if entity.active == false %} Non {% endif %}</td>
                <td class="large">
                <ul>
                    <li>
                        <a href="{{ path('qualification_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('qualification_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
            <li>
                <a href="{{ path('qualification_new') }}">
                    Ajouter une nouvelle qualification
                </a>
            </li>
        </ul>
        

        <div class="section_retour">            
            <a href="{{ path('extranet_app_homepage') }}" title="Retour au tableau de bord">Retour au tableau de bord</a>
        </div>
    {% endblock %}
